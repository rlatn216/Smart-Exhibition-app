<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".project_addActivity">

    <TextView
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="작품 등록"
        android:textSize="25sp"
        android:gravity="center"
        android:paddingTop="30dp"
        />

    <View
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/line_2"
        android:layout_marginTop="30dp"
        android:background="#808080"
        />

    <EditText
        android:id="@+id/tag_id"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_3"
        android:layout_marginTop="50dp"
        android:hint="태그 번호 입력"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/title_id"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tag_id"
        android:layout_marginTop="30dp"
        android:hint="작품 제목 입력"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        />


    <Button
        android:id="@+id/bt_choose"
        android:text="파일 선택"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/file_name"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/bt_upload"
        android:text="업로드"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bt_choose"
        android:layout_below="@+id/file_name"
        android:layout_marginTop="15dp"
        />


    <TextView
        android:id="@+id/file_name"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/title_id"
        android:text="작품 영상 업로드"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        />

    <VideoView
        android:id="@+id/iv_preview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/bt_choose"
        android:layout_centerInParent="true"
        />








</RelativeLayout>